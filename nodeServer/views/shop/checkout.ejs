                    var orderBtn = document.getElementById('order-btn');
                    orderBtn.addEventListener('click', function (event) {
                        event.preventDefault(); // Esto evita la recarga de la p√°gina.
                        stripe.redirectToCheckout({
                            sessionId: '<%= sessionId %>'
